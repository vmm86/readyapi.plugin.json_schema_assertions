<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
    <id>json_schema_assertions</id>
    <formats>
        <format>jar</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <dependencySets>
        <dependencySet>
            <outputDirectory>/lib</outputDirectory>
            <includes>
                <include>com.github.everit-org.json-schema:org.everit.json.schema:jar:1.11.1</include>
                <include>org.json:json:jar:20190722</include>
                <include>commons-validator:commons-validator:jar:1.6</include>
                <include>com.damnhandy:handy-uri-templates:jar:2.1.8</include>
                <include>com.google.re2j:re2j:jar:1.3</include>
                <include>com.jayway.jsonpath:json-path:jar:2.4.0</include>
                <include>org.slf4j:slf4j-log4j12:jar:1.7.21</include>
            </includes>
            <unpack>false</unpack>
        </dependencySet>
        <dependencySet>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>com.github.vmm86.readyapi.plugin:json_schema_assertions</include>
            </includes>
            <unpack>true</unpack>
        </dependencySet>
    </dependencySets>
    <fileSets>
        <fileSet>
            <directory>${project.basedir}</directory>
            <outputDirectory>./META-INF</outputDirectory>
            <includes>
                <include>LICENSE*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/src/assembly</directory>
            <outputDirectory>./META-INF</outputDirectory>
            <includes>
                <include>readme.txt</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>
