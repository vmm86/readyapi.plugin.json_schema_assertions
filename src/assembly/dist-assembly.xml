<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
    <id>json_schema_assertions</id>
    <formats>
        <format>jar</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <dependencySets>
        <dependencySet>
            <outputDirectory>/lib</outputDirectory>
            <includes>
                <include>com.github.everit-org.json-schema:org.everit.json.schema:jar:</include> <!-- :jar:1.11.1 -->
                <include>org.json:json:jar:</include> <!-- :jar:20190722 -->
                <include>commons-validator:commons-validator:jar:</include> <!-- :jar:1.6 -->
                <include>com.damnhandy:handy-uri-templates:jar:</include> <!-- jar:2.1.8 -->
                <include>com.google.re2j:re2j:jar:</include> <!-- :jar:1.3 -->
                <include>org.slf4j:slf4j-log4j12:jar:</include> <!-- :jar:1.7.21 -->
            </includes>
            <unpack>false</unpack>
        </dependencySet>
        <dependencySet>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>com.github.vmm86.readyapi.plugin:json_schema_assertions</include>
            </includes>
            <unpack>true</unpack>
        </dependencySet>
    </dependencySets>
    <fileSets>
        <fileSet>
            <directory>${project.basedir}</directory>
            <outputDirectory>./META-INF</outputDirectory>
            <includes>
                <include>LICENSE*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/src/assembly</directory>
            <outputDirectory>./META-INF</outputDirectory>
            <includes>
                <include>readme.txt</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>
